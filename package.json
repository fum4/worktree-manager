{
  "name": "worktree-manager",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "worktree-manager": "./dist/cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/cli.ts src/index.ts --format esm --dts --clean && mkdir -p dist/runtime && cp src/runtime/port-hook.cjs dist/runtime/port-hook.cjs && vite build",
    "dev": "concurrently \"vite build --watch\" \"cd test-project && tsx watch ../src/cli.ts\"",
    "start": "cd test-project && node ../dist/cli.js",
    "init": "cd test-project && tsx ../src/cli.ts init",
    "check-types": "tsc --noEmit",
    "check-lint": "eslint --no-error-on-unmatched-pattern --ext .js,.ts,.tsx .",
    "format-lint": "eslint --fix --no-error-on-unmatched-pattern --ext .js,.ts,.tsx ."
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "hono": "^4.7.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "tsup": "^8.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.5.4",
    "vite": "^6.2.4"
  }
}
