{
  "name": "wok3",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "wok3": "./dist/cli/index.js"
  },
  "main": "dist/electron/main.js",
  "scripts": {
    "build": "tsup src/cli/index.ts src/electron-entry.ts --format esm --dts --clean --external node-pty --external electron && mkdir -p dist/runtime && cp src/runtime/port-hook.cjs dist/runtime/port-hook.cjs && vite build",
    "dev": "concurrently \"vite build --watch\" \"cd test-project && tsx watch ../src/cli/index.ts\"",
    "start": "cd test-project && node ../dist/index.js",
    "init": "cd test-project && tsx ../src/cli/index.ts init",
    "electron:dev": "pnpm build && pnpm electron:compile && electron .",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:build": "pnpm build && pnpm electron:compile && electron-builder --mac",
    "check-types": "tsc --noEmit",
    "check-lint": "eslint --no-error-on-unmatched-pattern --ext .js,.ts,.tsx .",
    "format-lint": "eslint --fix --no-error-on-unmatched-pattern --ext .js,.ts,.tsx ."
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/node-ws": "^1.3.0",
    "@inquirer/prompts": "^8.2.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/xterm": "^6.0.0",
    "hono": "^4.7.7",
    "node-pty": "1.2.0-beta.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "electron",
      "node-pty"
    ]
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "tsup": "^8.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.5.4",
    "vite": "^6.2.4"
  }
}
